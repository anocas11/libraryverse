<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    android:backgroundTint="@color/teal_700"
    tools:context=".SearchActivity">

    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        tools:context=".SearchActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/main_toolbar" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/black">

            <include layout="@layout/main_nav_drawer" />


        </RelativeLayout>


    </androidx.drawerlayout.widget.DrawerLayout>


    <EditText
        android:id="@+id/searchViewSearchSearch"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:hint="Search Here"
        android:iconifiedByDefault="false"
        android:queryHint="Search Here"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/searchLL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/searchLL"
        android:layout_width="327dp"
        android:layout_height="602dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchViewSearchSearch">

        <ListView
            android:id="@+id/listViewSearchSearch"
            android:layout_width="match_parent"
            android:layout_height="584dp"
            android:layout_marginTop="20dp"
            android:divider="#ad5"
            android:dividerHeight="2dp"
            app:layout_constraintBottom_toBottomOf="@id/searchLL"
            app:layout_constraintEnd_toEndOf="@id/searchLL"
            app:layout_constraintStart_toStartOf="@id/searchLL" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>