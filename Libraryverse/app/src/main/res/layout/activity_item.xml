<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="685dp"
        android:background="@color/pink" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"
            android:background="#00FFFFFF"
            android:backgroundTint="#00FFFFFF" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/linearLayoutIteminfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/actor_movie_book"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imageViewItemImg"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/movieload" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/imageViewItemImg"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteY="150dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:contentDescription="TODO"
                        android:src="@drawable/ic_like" />

                    <ImageView
                        android:id="@+id/imageViewAddItem"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_add" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_favourite" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/textViewItemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Right here the description of the tex. E para ver se o scroll funciona vamos por bue texto que vÃ£o ser so letras. "
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!--<TextView
                android:id="@+id/textViewItemCharactersLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Characters"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />-->

        </LinearLayout>

    </ScrollView>



</androidx.drawerlayout.widget.DrawerLayout>

